	<h2>Bodega</h2>
	<table class="table table-hover">
		<th>Nombre</th>
		<th>Grasa</th>
		<th>Sal</th>
		<th>Azucar</th>
		<th>Editar</th>
		<th >Eliminar</th>
		<% _.each(productos, function(producto) { %>
		<tr>
			<td><%=producto.nombre%></td>	
			<td><%=producto.grasa%></td>
			<td><%=producto.sal%></td>
			<td><%=producto.azucar%></td>
			<td>
				<a href="/producto/show/<%=producto.id%>" class="btn btn-success btn-sm">Detalles</a>
			</td>
			<td>
				<form action="/producto/destroy/<%= producto.id%>" method="POST" accept-charset="utf-8">
					<input type="hidden" name="_method" value="delete"/>
					<input type="submit" class="btn btn-sm btn-danger" value="Eliminar"/>
					<input type="hidden" name="_csrf" value="<%= _csrf %>"/>

				</form>

			</td>

		</tr>
		<%})%>
	</table>

	
</div>