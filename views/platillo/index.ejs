	<h2>Menu</h2>
	<table class="table table-hover">
		<th>Nombre</th>
		<th>Precio</th>
		<th>Editar</th>
		<th >Eliminar</th>
		<% _.each(platillos, function(platillo) { %>
		<tr>
			<td><%=platillo.nombre%></td>	
			<td><%=platillo.precio%></td>
			<td>
				<a href="/platillo/show/<%=platillo.id%>" class="btn btn-success btn-sm">Detalles</a>
			</td>
			<td>
				<form action="/platillo/destroy/<%= platillo.id%>" method="POST" accept-charset="utf-8">
					<input type="hidden" name="_method" value="delete"/>
					<input type="submit" class="btn btn-sm btn-danger" value="Eliminar"/>
					<input type="hidden" name="_csrf" value="<%= _csrf %>"/>

				</form>

			</td>

		</tr>
		<%})%>
	</table>

	
