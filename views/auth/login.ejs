
<div class="container" style="max-width:350px;" > 
<% if (errors) {%>
  <% errors.forEach(function (error) { %>
    <%= __(error) %>
  <% }) %>
<% } %>
<h3>Inicia sesiÃ³n para entrar</h3>
<form role="form" action="/auth/local" method="post">
  <input type="text" name="identifier" placeholder="Username or Email" class="form-control ">
  <br>
  <input type="password" name="password" placeholder="Password" class="form-control ">
    <br>
  <button type="submit" class="btn btn-success  btn-lg">Sign in</button>
      <br>
  <a href="register">O tambien puedes registrarte!</a>
</form>

<% if (Object.keys(providers).length) {%>
  <h4>You can also use one of these...</h4>

  <% Object.keys(providers).forEach(function (key) { %>
    <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
  <% }) %>
<% } %>

</div>
